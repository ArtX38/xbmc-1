<includes>
  <include name="IncludesNowPlayingSmall">

    <control type="group">
      <animation effect="slide" start="0,0" end="-480,0" time="350" delay="175" tween="cubic" easing="in">WindowClose</animation>
      <animation effect="slide" start="-480,0" end="0,0" time="350" delay="750" tween="cubic" easing="out">WindowOpen</animation>
      <animation effect="slide" start="0,0" end="-480,0" time="350" delay="175" tween="cubic" easing="in">Hidden</animation>
      <animation effect="slide" start="-480,0" end="0,0" time="350" delay="175" tween="cubic" easing="out">Visible</animation>
      <posx>0</posx>
      <posy>350</posy>

      <control type="image">
        <visible>Player.HasAudio | Player.HasVideo | VideoPlayer.Content(LiveTV) | VideoPlayer.Content(Episodes) | VideoPlayer.Content(Movies)</visible>
        <description>Background End image</description>
        <posx>520</posx>
        <posy>460</posy>
        <width>64</width>
        <height>64</height>
        <texture flipx="false" flipy="true">sets/Default/HomeSubEnd.png</texture>
      </control>

      <control type="image">
        <visible>Player.HasAudio | Player.HasVideo | VideoPlayer.Content(LiveTV) | VideoPlayer.Content(Episodes) | VideoPlayer.Content(Movies)</visible>
        <description>Background image</description>
        <posx>0</posx>
        <posy>460</posy>
        <width>520</width>
        <height>64</height>
        <texture flipy="true">sets/Default/HomeSub.png</texture>
      </control>

    <!-- Music NowPlaying Info -->
    <control type="group">
      <visible>Player.HasAudio</visible>

      <control type="image">
        <description>Player Icon</description>
        <posx>-10</posx>
        <posy>465</posy>
        <width>64</width>
        <height>64</height>
        <aspectratio>keep</aspectratio>
        <texture>sets/Default/icons/MediaPlay-focus.png</texture>
      </control>
    
      <control type="fadelabel">
        <description>Album Label</description>
        <posx>40</posx>
        <posy>465</posy>
        <height>45</height>
        <width>450</width>
        <label>$INFO[MusicPlayer.Artist] - $INFO[MusicPlayer.Title]$INFO[VideoPlayer.Title] ($INFO[Player.Time] [COLOR=orange]/[/COLOR] $INFO[Player.Duration,])</label>
        <align>left</align>
        <aligny>center</aligny>
        <font>Font_Reg12</font>
        <textcolor>white</textcolor>
        <shadowcolor>black</shadowcolor>
      </control>
    
      <control type="label">
        <description>Time Label</description>
        <posx>40</posx>
        <posy>485</posy>
        <height>45</height>
        <width>450</width>
        <label>[COLOR=orange]$INFO[MusicPlayer.Album][/COLOR]</label>
        <align>left</align>
        <aligny>center</aligny>
        <font>Font_Reg12</font>
        <textcolor>white</textcolor>
        <shadowcolor>black</shadowcolor>
      </control>
    </control>
  
    <!-- PVR Recording Info -->
    <control type="group">
      <visible>Container(9000).HasFocus(12) + [PVR.IsRecording | PVR.HasNonRecordingTimer]</visible>
      <animation effect="fade" start="100" end="0" time="200" condition="Window.IsActive(Favourites)">conditional</animation>
      <control type="group">
        <animation effect="slide" start="0,0" end="0,150" time="0" condition="PVR.IsRecording">conditional</animation>
        <visible>PVR.HasNonRecordingTimer</visible>
    
        <control type="image">
          <posx>600</posx>
          <posy>0</posy>
          <width>120</width>
          <height>120</height>
          <aspectratio>keep</aspectratio>
          <texture background="true" fallback="DefaultVideoCover.png">$INFO[PVR.NextRecordingChannelIcon]</texture>
          <bordertexture border="8">ThumbBorder.png</bordertexture>
          <bordersize>4</bordersize>
        </control>
    
        <control type="image">
          <posx>548</posx>
          <posy>8</posy>
          <width>38</width>
          <height>38</height>
          <aspectratio>keep</aspectratio>
          <texture>PVR-HasTimer.png</texture>
        </control>
    
        <control type="label">
          <description>Next Timer Header label</description>
          <posx>532</posx>
          <posy>8</posy>
          <height>38</height>
          <width>600</width>
          <label>$LOCALIZE[19157]</label>
          <align>right</align>
          <aligny>center</aligny>
          <font>font12_title</font>
          <textcolor>blue</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
    
        <control type="label">
          <description>NextRecordingDateTime</description>
          <posx>585</posx>
          <posy>45</posy>
          <height>38</height>
          <width>600</width>
          <label>$INFO[PVR.NextRecordingDateTime,$LOCALIZE[19126] - ]</label>
          <align>right</align>
          <aligny>center</aligny>
          <font>font12</font>
          <scroll>true</scroll>
          <shadowcolor>black</shadowcolor>
        </control>
    
        <control type="label">
          <description>NextRecordingTitle Channel</description>
          <posx>585</posx>
          <posy>75</posy>
          <height>38</height>
          <width>1200</width>
          <label>$INFO[PVR.NextRecordingTitle][COLOR=grey]$INFO[PVR.NextRecordingChannel, - [COLOR=blue]([/COLOR],[COLOR=blue])[/COLOR]][/COLOR]</label>
          <align>right</align>
          <aligny>center</aligny>
          <font>font12_title</font>
          <shadowcolor>black</shadowcolor>
          <scroll>true</scroll>
        </control>
      </control>

      <!-- PVR Is Recording -->
      <control type="group">
        <visible>PVR.IsRecording</visible>
    
        <control type="image">
          <posx>600</posx>
          <posy>0</posy>
          <width>120</width>
          <height>120</height>
          <aspectratio>keep</aspectratio>
          <texture background="true" fallback="DefaultVideoCover.png">$INFO[PVR.NowRecordingChannelIcon]</texture>
          <bordertexture>sets/Default/RecentAddedBack-focus.png</bordertexture>
          <bordersize>15</bordersize>
        </control>
    
        <control type="image">
          <posx>540</posx>
          <posy>8</posy>
          <width>45</width>
          <height>38</height>
          <aspectratio>keep</aspectratio>
          <texture>PVR-IsRecording.png</texture>
        </control>
    
        <control type="label">
          <description>Is Recording Header label</description>
          <posx>525</posx>
          <posy>8</posy>
          <height>38</height>
          <width>600</width>
          <label>$LOCALIZE[19158]</label>
          <align>right</align>
          <aligny>center</aligny>
          <font>font12_title</font>
          <textcolor>blue</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
    
        <control type="label">
          <description>NextRecordingDateTime</description>
          <posx>585</posx>
          <posy>45</posy>
          <height>38</height>
          <width>600</width>
          <label>$INFO[PVR.NowRecordingDateTime,$LOCALIZE[19126] - ]</label>
          <align>right</align>
          <aligny>center</aligny>
          <font>font12</font>
          <scroll>true</scroll>
          <shadowcolor>black</shadowcolor>
        </control>
    
        <control type="label">
          <description>NextRecordingTitle Channel</description>
          <posx>585</posx>
          <posy>75</posy>
          <height>45</height>
          <width>1200</width>
          <label>$INFO[PVR.NowRecordingTitle][COLOR=grey]$INFO[PVR.NowRecordingChannel, - [COLOR=blue]([/COLOR],[COLOR=blue])[/COLOR]][/COLOR]</label>
          <align>right</align>
          <aligny>center</aligny>
          <font>font12_title</font>
          <shadowcolor>black</shadowcolor>
          <scroll>true</scroll>
        </control>
      </control>
    </control>
  
    <!-- Video NowPlaying Info -->
    <control type="group">
      <visible>Player.HasVideo</visible>

      <control type="group">
        <visible>!VideoPlayer.Content(Movies) + !VideoPlayer.Content(Episodes) + !VideoPlayer.Content(LiveTV)</visible>
         <control type="fadelabel">
          <description>Title label</description>
          <posx>5</posx>
          <posy>465</posy>
          <height>45</height>
          <width>510</width>
          <label>$INFO[VideoPlayer.Title]</label>
          <align>left</align>
          <aligny>center</aligny>
          <font>Font_Reg12</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
    
        <control type="fadelabel">
          <description>Time Label</description>
          <posx>5</posx>
          <posy>485</posy>
          <height>45</height>
          <width>225</width>
          <label>$INFO[Player.Time]$INFO[Player.Duration,[COLOR=orange] / [/COLOR]]</label>
          <align>left</align>
          <aligny>center</aligny>
          <font>Font_Reg12</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
      </control>
    
    <!-- TV NowPlaying Info -->
      <control type="group">
        <visible>VideoPlayer.Content(LiveTV)</visible>

        <control type="image">
          <description>Cover image</description>
          <posx>30</posx>
          <posy>68</posy>
          <width>180</width>
          <height>450</height>
          <aspectratio aligny="bottom">keep</aspectratio>
          <texture>$INFO[VideoPlayer.Cover]</texture>
          <bordertexture>sets/Default/RecentAddedBack-focus.png</bordertexture>
          <bordersize>15</bordersize>
        </control>
    
        <control type="label">
          <description>Channel label</description>
          <posx>240</posx>
          <posy>398</posy>
          <height>38</height>
          <width>990</width>
          <label>$INFO[VideoPlayer.ChannelName]</label>
          <align>left</align>
          <aligny>center</aligny>
          <font>Font_Reg12</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
    
        <control type="label">
          <description>Title label</description>
          <posx>240</posx>
          <posy>428</posy>
          <height>45</height>
          <width>1500</width>
          <label>$INFO[VideoPlayer.Title]</label>
          <align>left</align>
          <aligny>center</aligny>
          <font>Font_Reg14</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
    
        <control type="label">
          <description>Time Label</description>
          <posx>240</posx>
          <posy>465</posy>
          <height>45</height>
          <width>450</width>
          <label>$INFO[Player.Time]$INFO[Player.Duration,[COLOR=blue] / [/COLOR]]</label>
          <align>left</align>
          <aligny>center</aligny>
          <font>Font_Reg12</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
      </control>
    
      <!-- Movies NowPlaying Info -->
      <control type="group">
        <visible>VideoPlayer.Content(Movies)</visible>
   
        <control type="label">
          <description>Title label</description>
          <posx>5</posx>
          <posy>465</posy>
          <height>45</height>
          <width>510</width>
          <label>$INFO[VideoPlayer.Title] ($INFO[VideoPlayer.Year,[COLOR=orange],[/COLOR])]</label>
          <align>left</align>
          <aligny>center</aligny>
          <font>Font_Reg12</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
    
        <control type="label">
          <description>Time Label</description>
          <posx>5</posx>
          <posy>485</posy>
          <height>45</height>
          <width>450</width>
          <label>$INFO[Player.Time]$INFO[Player.Duration,[COLOR=orange] / [/COLOR]]</label>
          <align>left</align>
          <aligny>center</aligny>
          <font>Font_Reg12</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
      </control>
    
    <!-- TV Shows NowPlaying Info -->
      <control type="group">
        <visible>VideoPlayer.Content(Episodes)</visible>

        <control type="label">
          <description>Title label</description>
          <posx>5</posx>
          <posy>465</posy>
          <height>45</height>
          <width>1500</width>
          <label>$INFO[VideoPlayer.TVShowTitle] - $LOCALIZE[20373] $INFO[VideoPlayer.Season] / $LOCALIZE[20359] $INFO[VideoPlayer.episode] ("[COLOR=orange]$INFO[VideoPlayer.Title][/COLOR]")</label>
          <align>left</align>
          <aligny>center</aligny>
          <font>Font_Reg12</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
    
        <control type="label">
          <description>Time Label</description>
          <posx>5</posx>
          <posy>485</posy>
          <height>45</height>
          <width>450</width>
          <label>$INFO[Player.Time]$INFO[Player.Duration,[COLOR=orange] / [/COLOR]]</label>
          <align>left</align>
          <aligny>center</aligny>
          <font>Font_Reg12</font>
          <textcolor>white</textcolor>
          <shadowcolor>black</shadowcolor>
        </control>
      </control>
    </control>
    </control>
  </include>
</includes>